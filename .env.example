# ===============================
# Application
# ===============================
NODE_ENV=development   # development | staging | production
PORT=3000
LOGS_FOLDER=logs

# ===============================
# Database
# ===============================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=kcic_payment_user
DB_PASSWORD=
DB_DATABASE=bridgepay_refund

# ===============================
# Auth / Tokens
# ===============================
JWT_SECRET=

# ===============================
# Caching / Messaging
# ===============================
REDIS_URL=redis://localhost:6379
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_CORE_QUEUE=bridgepay-core
RABBITMQ_QUEUE=bridgepay-refund
RABBITMQ_ENCRYPTOR_QUEUE=bridgepay-encryptor

# ===============================
# Key Files (Legacy)
# ===============================
KEY_FILE_PRIVATE=
KEY_FILE_PUBLIC=
KEY_FILE_PRIVATE_PASS=
KEY_FILE_PUBLIC_PASS=

# ===============================
# External Integrations
# ===============================
ILUMA_TOKEN=

# ===============================
# Replication / Mode
# ===============================
DEFAULT_MODE=master   # master | slave

# ===============================
# Security / Encryption
# ===============================

# Mode: "prod" uses AWS KMS, anything else uses local KEK
SECURITY_SEC_MODE=dev        # dev | prod

# ---- AWS KMS (production mode) ----
SECURITY_KMS_KEY_ID=          # your CMK ARN (e.g. arn:aws:kms:ap-southeast-1:123456789012:key/abcd-1234)
SECURITY_KMS_REGION=ap-southeast-1

# ---- Local Key Encryption Key (development mode) ----
# Base64-encoded 32-byte key, e.g. generated via:
#   openssl rand -base64 32
SECURITY_LOCAL_KEK64=

# ---- Blind Index Secret ----
# 32-byte base64 key, shared between services that must compare hashes
# Generate with:  openssl rand -base64 32
SECURITY_BIX_SECRET=